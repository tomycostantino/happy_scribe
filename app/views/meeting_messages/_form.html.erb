<%= form_with url: meeting_chat_messages_path(meeting, chat),
      method: :post,
      id: "new_meeting_message",
      class: "flex gap-2 mt-4",
      data: { controller: "message-form" } do |f| %>
  <%= f.text_area :content,
      name: "message[content]",
      placeholder: "Ask a follow-up... (Enter to send)",
      class: form_input_class(variant: :chat),
      rows: 1,
      autofocus: true,
      data: { action: "keydown->message-form#submitOnEnter input->message-form#autoResize" } %>
  <%= f.submit "Send",
      class: "rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 cursor-pointer" %>
<% end %>
