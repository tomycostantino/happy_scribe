<div class="mx-auto w-full max-w-sm">
  <%= auth_page_title "Forgot your password?" %>

  <%= flash_messages %>

  <%= auth_card do %>
    <p class="text-sm text-gray-600 mb-5">Enter your email address and we'll send you a link to reset your password.</p>

    <%= form_with url: passwords_path, class: "space-y-5" do |form| %>
      <div>
        <%= form.label :email_address, "Email address", class: "#{form_label_class} mb-1" %>
        <%= form.email_field :email_address,
              required: true,
              autofocus: true,
              autocomplete: "username",
              placeholder: "you@example.com",
              value: params[:email_address],
              class: form_input_class %>
      </div>

      <%= form.submit "Email reset instructions", class: primary_button_class(size: :full) %>
    <% end %>
  <% end %>

  <%= auth_footer_link "Back to sign in", new_session_path %>
</div>
