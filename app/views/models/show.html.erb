<% content_for :title, @model.name %>

<div class="w-full max-w-3xl mx-auto p-8">
  <div class="mb-6">
    <%= back_link("Back to Models", models_path) %>
  </div>

  <%= card do %>
    <div class="px-6 py-5 border-b border-gray-100">
      <h1 class="text-lg font-semibold text-gray-900"><%= @model.name %></h1>
    </div>
    <div class="px-6 py-5 space-y-3">
      <div class="flex items-center gap-2">
        <span class="text-sm font-medium text-gray-500 w-32">ID</span>
        <span class="text-sm text-gray-900 font-mono"><%= @model.model_id %></span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-sm font-medium text-gray-500 w-32">Provider</span>
        <span class="text-sm text-gray-900"><%= @model.provider %></span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-sm font-medium text-gray-500 w-32">Context Window</span>
        <span class="text-sm text-gray-900"><%= number_with_delimiter(@model.context_window) %> tokens</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="text-sm font-medium text-gray-500 w-32">Max Output</span>
        <span class="text-sm text-gray-900"><%= number_with_delimiter(@model.max_output_tokens) %> tokens</span>
      </div>
      <% if @model.capabilities.any? %>
        <div class="flex items-center gap-2">
          <span class="text-sm font-medium text-gray-500 w-32">Capabilities</span>
          <span class="text-sm text-gray-900"><%= @model.capabilities.join(", ") %></span>
        </div>
      <% end %>
    </div>
    <div class="px-6 py-4 border-t border-gray-100 flex items-center gap-4">
      <%= link_to "Start chat with this model", new_chat_path(model: @model.model_id), class: "text-sm font-medium text-indigo-600 hover:text-indigo-500" %>
      <%= link_to "Back to chats", chats_path, class: "text-sm font-medium text-gray-500 hover:text-gray-700" %>
    </div>
  <% end %>
</div>
