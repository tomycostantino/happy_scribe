<%= form_with(model: chat, url: chats_path, class: "space-y-5") do |form| %>
  <%= form_errors(chat) %>

  <div>
    <%= form.label :model, "Select AI model:", class: form_label_class %>
    <%= form.select :model,
        options_for_select(Model.pluck(:name, :model_id).unshift(["Default (#{RubyLLM.config.default_model})", nil]), @selected_model),
        {},
        class: form_select_class %>
  </div>

  <div>
    <%= form.text_field :prompt, placeholder: "What would you like to discuss?", autofocus: true, class: form_input_class %>
  </div>

  <div>
    <%= form.submit "Start new chat", class: primary_button_class %>
  </div>
<% end %>
