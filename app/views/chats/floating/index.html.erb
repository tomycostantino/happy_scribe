<%= turbo_frame_tag "floating_chat", class: "flex flex-col h-full" do %>
  <%# Header %>
  <div class="flex items-center justify-between px-4 py-3 border-b border-gray-200 bg-gray-50 rounded-t-2xl shrink-0">
    <h3 class="text-sm font-semibold text-gray-700">Chats</h3>
    <%= link_to chats_floating_index_path,
          data: { turbo_method: :post, turbo_frame: "floating_chat" },
          class: "text-xs text-indigo-600 hover:text-indigo-800 font-medium cursor-pointer" do %>
      New chat
    <% end %>
  </div>

  <div class="flex flex-col flex-1 min-h-0">
    <div class="flex-1 overflow-y-auto">
      <% if @chats.any? %>
        <div class="divide-y divide-gray-100">
          <% @chats.each do |chat| %>
            <div class="group flex items-center gap-2 px-3 py-2.5 hover:bg-gray-50 transition-colors">
              <%= link_to chats_floating_path(chat),
                    class: "flex-1 min-w-0",
                    data: { turbo_frame: "floating_chat" } do %>
                <p class="text-sm text-gray-800 truncate"><%= chat.preview %></p>
                <p class="text-xs text-gray-400 mt-0.5">
                  <%= time_ago_in_words(chat.updated_at) %> ago
                  <span class="text-gray-300 mx-1">&middot;</span>
                  <%= chat.messages.visible.count %> messages
                </p>
              <% end %>
              <%= button_to chats_floating_path(chat),
                    method: :delete,
                    class: "opacity-0 group-hover:opacity-100 p-1 text-gray-400 hover:text-red-500 transition-opacity cursor-pointer",
                    data: { turbo_frame: "floating_chat", turbo_confirm: "Delete this chat?" } do %>
                <%= trash_icon %>
              <% end %>
            </div>
          <% end %>
        </div>
      <% else %>
        <div class="text-center text-gray-400 text-sm mt-8 px-4">
          <p>No chats yet.</p>
          <p class="mt-1">Start a new conversation with the assistant.</p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
