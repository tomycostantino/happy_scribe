<%= tag.div id: dom_id(contact), class: "flex items-center justify-between py-3" do %>
  <div class="min-w-0 flex-1">
    <%= link_to contact_path(contact), data: { turbo_frame: "contacts" },
          class: "text-sm font-medium text-gray-900 hover:text-indigo-600 truncate block transition-colors" do %>
      <%= contact.name %>
    <% end %>
    <p class="text-xs text-gray-500 truncate"><%= contact.email %></p>
    <% if contact.notes.present? %>
      <p class="text-xs text-gray-400 truncate mt-0.5"><%= contact.notes %></p>
    <% end %>
  </div>
  <div class="flex items-center gap-2 ml-3 shrink-0">
    <%= edit_button(edit_contact_path(contact), data: { turbo_frame: "contacts" }) %>
    <%= delete_button(contact_path(contact), confirm: "Delete this contact?", data: { turbo_frame: "contacts" }) %>
  </div>
<% end %>
