<%= form_with model: contact, data: { turbo_frame: "contacts" }, class: "space-y-4" do |f| %>
  <% if contact.errors.any? %>
    <div class="rounded-md bg-red-50 p-3">
      <div class="text-sm text-red-700">
        <% contact.errors.full_messages.each do |message| %>
          <p><%= message %></p>
        <% end %>
      </div>
    </div>
  <% end %>

  <div>
    <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_field :name, class: "mt-1 w-full rounded-md border-0 py-1.5 px-3 text-sm text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600", placeholder: "Jane Smith" %>
  </div>

  <div>
    <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
    <%= f.email_field :email, class: "mt-1 w-full rounded-md border-0 py-1.5 px-3 text-sm text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600", placeholder: "jane@example.com" %>
  </div>

  <div>
    <%= f.label :notes, class: "block text-sm font-medium text-gray-700" %>
    <%= f.text_area :notes, rows: 2, class: "mt-1 w-full rounded-md border-0 py-1.5 px-3 text-sm text-gray-900 ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600", placeholder: "Optional notes..." %>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit class: "rounded-md bg-indigo-600 py-1.5 px-3 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 cursor-pointer" %>
    <%= link_to "Cancel", contacts_path, data: { turbo_frame: "contacts" },
          class: "text-sm font-medium text-gray-600 hover:text-gray-500" %>
  </div>
<% end %>
