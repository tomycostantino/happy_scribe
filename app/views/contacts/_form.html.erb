<%= form_with model: contact, data: { turbo_frame: "contacts" }, class: "space-y-4" do |f| %>
  <%= form_errors(contact) %>

  <div>
    <%= f.label :name, class: form_label_class %>
    <%= f.text_field :name, class: form_input_class(variant: :compact), placeholder: "Jane Smith" %>
  </div>

  <div>
    <%= f.label :email, class: form_label_class %>
    <%= f.email_field :email, class: form_input_class(variant: :compact), placeholder: "jane@example.com" %>
  </div>

  <div>
    <%= f.label :notes, class: form_label_class %>
    <%= f.text_area :notes, rows: 2, class: form_input_class(variant: :compact), placeholder: "Optional notes..." %>
  </div>

  <div class="flex items-center gap-3">
    <%= f.submit class: primary_button_class(size: :sm) %>
    <%= cancel_link(contacts_path, data: { turbo_frame: "contacts" }) %>
  </div>
<% end %>
