<%= tag.div id: dom_id(meeting), class: "flex items-center justify-between px-5 py-4" do %>
  <div class="min-w-0 flex-1">
    <%= link_to meeting.title, meeting_path(meeting),
          class: "text-sm font-semibold text-indigo-600 hover:text-indigo-500 truncate block" %>
    <p class="text-xs text-gray-500 mt-0.5"><%= formatted_datetime(meeting.created_at) %></p>
  </div>
  <div class="flex items-center gap-4 ml-4 shrink-0">
    <%= status_badge(meeting) %>
    <%= delete_button(meeting_path(meeting), confirm: "Delete this meeting?") %>
  </div>
<% end %>
