<div class="w-full">
  <div class="flex justify-between items-center mb-8">
    <h1 class="text-2xl font-bold">Meetings</h1>
    <%= link_to "New Meeting", new_meeting_path, class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700" %>
  </div>

  <% if @meetings.any? %>
    <div class="space-y-3">
      <% @meetings.each do |meeting| %>
        <div class="flex items-center justify-between bg-white border rounded-lg p-4">
          <div>
            <%= link_to meeting.title, meeting_path(meeting), class: "font-medium text-blue-600 hover:underline" %>
            <div class="text-sm text-gray-500"><%= meeting.created_at.strftime("%b %d, %Y %H:%M") %></div>
          </div>
          <div class="flex items-center gap-3">
            <%= render "status", meeting: meeting %>
            <%= button_to "Delete", meeting_path(meeting), method: :delete,
                  class: "text-red-500 text-sm hover:underline",
                  data: { turbo_confirm: "Delete this meeting?" } %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-gray-500">No meetings yet. Upload your first recording.</p>
  <% end %>
</div>
