<div class="w-full max-w-lg">
  <h1 class="text-2xl font-bold mb-6">New Meeting</h1>

  <%= form_with(model: @meeting, class: "space-y-4") do |f| %>
    <% if @meeting.errors.any? %>
      <div class="bg-red-50 border border-red-200 rounded p-3">
        <% @meeting.errors.full_messages.each do |msg| %>
          <p class="text-red-600 text-sm"><%= msg %></p>
        <% end %>
      </div>
    <% end %>

    <div>
      <%= f.label :title, class: "block text-sm font-medium mb-1" %>
      <%= f.text_field :title, class: "w-full border rounded px-3 py-2", required: true %>
    </div>

    <div>
      <%= f.label :language, class: "block text-sm font-medium mb-1" %>
      <%= f.select :language, [["English (US)", "en-US"], ["English (UK)", "en-GB"], ["Spanish", "es"], ["French", "fr"], ["German", "de"], ["Czech", "cs"]],
            {}, class: "w-full border rounded px-3 py-2" %>
    </div>

    <div data-controller="dropzone">
      <%= f.label :recording, "Audio file", class: "block text-sm font-medium mb-1" %>
      <div data-dropzone-target="area"
           class="border-2 border-dashed border-gray-300 rounded-lg p-8 text-center cursor-pointer hover:border-blue-400 transition-colors">
        <p data-dropzone-target="prompt" class="text-gray-500">
          Drag & drop your audio file here, or click to browse
        </p>
        <%= f.file_field :recording,
              accept: "audio/*,video/*",
              class: "hidden",
              data: { dropzone_target: "input", action: "change->dropzone#picked" } %>
      </div>
    </div>

    <div class="flex gap-3">
      <%= f.submit "Upload & Transcribe", class: "bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 cursor-pointer" %>
      <%= link_to "Cancel", meetings_path, class: "px-4 py-2 text-gray-600 hover:underline" %>
    </div>
  <% end %>
</div>
